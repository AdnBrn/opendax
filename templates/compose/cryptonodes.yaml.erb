version: '3.6'

services:
  parity:
    image: parity/parity:v2.5.9-stable
    restart: always
    command: |
      --chain=mainnet
      --mode=active
      --interface=all
      --snapshot-peers=10
      --min-peers=25
      --max-peers=50
      --jsonrpc-interface=0.0.0.0
      --jsonrpc-cors=all
      --jsonrpc-hosts=all
      --jsonrpc-apis=all
      --db-compaction=ssd
    volumes:
      - ../data/parity:/home/parity/.local/share/io.parity.ethereum

  bitcoind:
    image: quay.io/openware/bitcoind:0.17.1
    restart: always
    volumes:
      - ../config/bitcoin.conf:/bitcoin/.bitcoin/bitcoin.conf
